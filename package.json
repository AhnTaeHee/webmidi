{
  "name": "webmidi",
  "version": "3.0.0-alpha.1",
  "description": "WebMidi.js helps you tame the Web MIDI API. Send and receive MIDI messages with ease. Control instruments with user-friendly functions (playNote, sendPitchBend, etc.). React to MIDI input with simple event listeners (noteon, pitchbend, controlchange, etc.).",
  "author": {
    "name": "Jean-Philippe Côté",
    "email": "jp@cote.cc",
    "url": "https://djip.co"
  },
  "main": "dist/webmidi.cjs.min.js",
  "module": "dist/webmidi.esm.min.js",
  "webmidi": {
    "name": "WebMidi.js",
    "tagline": "A JavaScript library to help you tame the Web MIDI API"
  },
  "types": "webmidi.d.ts",
  "scripts": {
    "build": "node tools/build/build.js -t cjs && node tools/build/build.js -t esm && node tools/build/build.js -t iife",
    "documentation:generate": "node tools/documentation/generate.js",
    "documentation:publish": "node tools/documentation/publish.js",
    "lint": "eslint ./src/*.js",
    "test": "mocha --require @babel/polyfill test/index.js --exit",
    "test-all": "npm run types && npm run lint && npm run test-coverage",
    "test-coverage": "nyc --reporter=text npm run test",
    "types": "tsc --strict --noEmit ./webmidi.d.ts"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/djipco/webmidi.git"
  },
  "bugs": {
    "url": "https://github.com/djipco/webmidi/issues"
  },
  "keywords": [
    "midi",
    "message",
    "web",
    "browser",
    "front-end",
    "web midi api",
    "music",
    "djipco",
    "music",
    "protocol",
    "communication",
    "channel"
  ],
  "homepage": "https://github.com/djipco/webmidi",
  "license": "MIT",
  "engines": {
    "node": ">0.6.x"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.0",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/polyfill": "^7.8.7",
    "@babel/preset-env": "^7.9.0",
    "chai": "^4.2.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "foodoc": "0.0.9",
    "gh-pages": "^2.2.0",
    "jsdoc": "^3.6.3",
    "midi-test": "^1.1.1",
    "minimist": "^1.2.5",
    "mocha": "^7.1.1",
    "nyc": "^15.0.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.3.3",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-license": "^2.0.0",
    "rollup-plugin-terser": "^5.3.0",
    "sinon": "^9.0.1",
    "sinon-browser-only": "^1.12.1",
    "typescript": "^3.8.3"
  },
  "dependencies": {
    "djipevents": "^1.0.0-beta.4"
  },
  "optionalDependencies": {
    "jzz": "^1.0.3"
  }
}
